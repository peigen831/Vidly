@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment    
*@

@{ 
    var className = Model.Count() > 0 ? "popular" : null;
}

@if (Model.Count() == 0)
{
    <text>No movie.</text>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>@movie.Name</li>
        }
    </ul>
}
